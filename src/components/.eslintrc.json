{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "eqeqeq": [
      "error",
      "always"
    ],
    "no-console": "off",
    "no-undefined": "off",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "no-multi-spaces": [
      "warn",
      {
        "exceptions": {
          "VariableDeclarator": true
        }
      }
    ],
    "no-trailing-spaces": "warn",
    "new-cap": "warn",
    "no-redeclare": [
      "error",
      {
        "builtinGlobals": true
      }
    ],
    "semi": [
      2,
      "always"
    ],
    "eol-last": "error",
    "no-var": "error",
    "camelcase": 0,
    "space-in-parens": [
      "error",
      "always"
    ],
    "space-infix-ops": [
      "error",
      {
        "int32Hint": false
      }
    ]
    
  }
}